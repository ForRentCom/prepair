# Options
CC=c++
IPATH=/usr/include/gdal
LPATH=/usr/lib

CFLAGS=-Wall -O3 -frounding-math -fno-strict-aliasing -I$(IPATH) -L$(LPATH)

LDFLAGS=-g -O3  -D_REENTRANT -frounding-math -Wl,-Bsymbolic-functions -L$(LPATH) -lboost_thread-mt -lgmp -lgmpxx -lmpfr -lCGAL -lCGAL_Core -lgdal

all: prepair

PolygonRepair.o: PolygonRepair.cpp
	$(CC) $(CFLAGS) -c $^

TriangleInfo.o: TriangleInfo.cpp
	$(CC) $(CFLAGS) -c $^

prepair.o: prepair.cpp
	$(CC) $(CFLAGS) -c $^

prepair: PolygonRepair.o TriangleInfo.o prepair.o
	$(CC) $(LDFLAGS) $^ -o prepair

clean:
	rm -rf *.o prepair